                <div class="grid grid-cols-2 gap-2">
                  <div class="mb-4">
                    <label
                      for="thumbnail"
                      class="block text-dark-blue-900 dark:text-grey-200 font-roboto text-sm mb-2"
                      >Thumbnail Image</label
                    >
                    <input
                      type="file"
                      id="thumbnail"
                      name="thumbnail"
                      accept="image/*"
                      class="w-full p-2 rounded-lg border border-grey-400 dark:border-dark-blue-600 bg-grey-100 dark:bg-dark-blue-900 text-dark-blue-900 dark:text-grey-200 font-roboto text-sm"
                    />
                  </div>
                  <div class="mb-4">
                    <label
                      for="banner"
                      class="block text-dark-blue-900 dark:text-grey-200 font-roboto text-sm mb-2"
                      >Banner Image</label
                    >
                    <input
                      type="file"
                      id="banner"
                      name="banner"
                      accept="image/*"
                      class="w-full p-2 rounded-lg border border-grey-400 dark:border-dark-blue-600 bg-grey-100 dark:bg-dark-blue-900 text-dark-blue-900 dark:text-grey-200 font-roboto text-sm"
                    />
                  </div>
