                <div>
                  <h3 class="text-xl font-roboto font-bold mb-1">
                    Unapproved Testimonies
                  </h3>
                  <p class="text-3xl font-bold text-red-400 animate-pulse">
                    <%= testimonies.length %>
                  </p>
                  <p class="text-grey-200 text-sm">Pending Approval</p>
                </div>
              </div>
              <a
                href="/admin/testimonies"
                class="mt-4 inline-block bg-red-900 text-white px-4 py-2 rounded-lg hover:bg-red-800 transition-colors text-sm font-roboto uppercase"
              >
                Review Testimonies
              </a>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- JavaScript for Mobile Sidebar Toggle -->
    <script>
      const sidebar = document.getElementById("sidebar");
      const menuBtn = document.getElementById("menuBtn");

      menuBtn.addEventListener("click", () => {
        sidebar.classList.toggle("-translate-x-full");
      });

      // Close sidebar when clicking outside on mobile
      document.addEventListener("click", (e) => {
        if (
          !sidebar.contains(e.target) &&
          !menuBtn.contains(e.target) &&
          !sidebar.classList.contains("-translate-x-full")
        ) {
          sidebar.classList.add("-translate-x-full");
        }
      });
    </script>
  </body>
