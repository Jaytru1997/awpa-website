                                                data-description="<%= item.description %>" data-type="<%= item.type %>"
                                                data-status="<%= item.status %>" data-tags="<%= item.tags.join(',') %>"
                                                data-category="<%= item.category %>"
                                                data-price-status="<%= item.priceStatus %>"
