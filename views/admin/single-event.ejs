            <span class="font-roboto">Logout</span>
          </a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="flex-1 ml-0 md:ml-64">
        <!-- Top Bar -->
        <header
          class="bg-white dark:bg-dark-blue-800 shadow p-4 flex justify-between items-center"
        >
          <div class="flex items-center gap-4">
            <button
              id="menuBtn"
              class="md:hidden text-dark dark:text-white focus:outline-none"
              aria-label="Toggle sidebar"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"
                ></path>
              </svg>
            </button>
            <h2
              class="text-xl font-roboto font-bold text-dark-blue-900 dark:text-white"
            >
              Event
            </h2>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-dark dark:text-grey-200 font-roboto"
              >Admin User</span
            >
            <img
              src="/asset/logo/logo.png"
              alt="User Avatar"
              class="w-10 h-10 rounded-full object-cover"
            />
          </div>
        </header>

        <!-- Content Area -->
        <main class="p-4 sm:p-6 dark:bg-dark-blue-900 min-h-[calc(100vh-64px)]">
          <!-- Header -->
          <div
            class="flex flex-col sm:flex-row justify-between items-center mb-6"
          >
            <h1
              class="text-xl sm:text-3xl font-roboto font-bold text-dark-blue-900 dark:text-white"
            >
              Manage Attendance
            </h1>
            <button
              onclick="printElement()"
              id="printAttendanceBtn"
              class="bg-red-900 text-white px-4 py-2 rounded-xl hover:bg-red-800 flex items-center gap-2 font-roboto uppercase transition-colors min-h-[44px]"
            >
              Print Attendance
            </button>
          </div>

          <!-- Attendees Table -->

          <div
            id="attendeeTable"
            class="bg-white dark:bg-dark-blue-800 rounded-xl shadow-lg overflow-x-auto scrollbar-hide"
          >
            <table class="w-full text-left">
              <thead>
                <tr class="bg-dark-blue-900 text-white text-xs sm:text-sm">
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[5%]">
                    No.
                  </th>
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[20%]">
                    Name
                  </th>
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[20%]">
                    Email
                  </th>
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[10%]">
                    Event
                  </th>
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[15%]">
                    Start Date
                  </th>
                  <th class="p-2 sm:p-4 font-roboto font-semibold w-[15%]">
                    End Date
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if (attendees && attendees.length> 0) { %> <%
                attendees.forEach((attendee, index)=> { %>
                <tr
                  class="border-b dark:border-dark-blue-600 hover:bg-grey-100 dark:hover:bg-dark-blue-700 text-xs sm:text-sm"
                >
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto"
                  >
                    <%= index + 1 %>
                  </td>
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto truncate truncate-mobile"
                  >
                    <%= attendee.user.name %>
                  </td>
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto truncate truncate-mobile"
                  >
                    <%= attendee.user.email %>
                  </td>
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto capitalize"
                  >
                    <%= attendee.event.title %>
                  </td>
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto"
                  >
                    <%= attendee.event.startDate.toLocaleString('en-US', {
                    month: 'short' , day: 'numeric' , year: 'numeric' , hour:
                    'numeric' , minute: 'numeric' , hour12: true }) %>
                  </td>
                  <td
                    class="p-2 sm:p-4 text-dark-blue-900 dark:text-grey-200 font-roboto"
                  >
                    <%= attendee.event.endDate.toLocaleString('en-US', { month:
                    'short' , day: 'numeric' , year: 'numeric' , hour: 'numeric'
                    , minute: 'numeric' , hour12: true }) %>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td
                    colspan="7"
                    class="p-4 text-center text-grey-600 dark:text-grey-400 font-roboto text-sm"
                  >
                    No attendees found.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

    <!-- JavaScript -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const sidebar = document.getElementById("sidebar");
        const menuBtn = document.getElementById("menuBtn");

        menuBtn.addEventListener("click", () => {
          sidebar.classList.toggle("-translate-x-full");
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener("click", (e) => {
          if (
            !sidebar.contains(e.target) &&
            !menuBtn.contains(e.target) &&
            !sidebar.classList.contains("-translate-x-full")
          ) {
            sidebar.classList.add("-translate-x-full");
          }
        });
      });
    </script>

    <script>
      function printElement() {
        const element = document.getElementById("attendeeTable");
        const printWindow = window.open("", "", "height=600,width=800");

        // Get all stylesheets and inline styles
        let styles = "";
        const styleNodes = document.querySelectorAll(
          'style, link[rel="stylesheet"]'
        );
        styleNodes.forEach((node) => {
          styles += node.outerHTML;
        });

        // Build printable HTML
        printWindow.document.write(`
        <html>
          <head>
            <title>Print</title>
            ${styles}
          </head>
          <body>
            ${element.innerHTML}
          </body>
        </html>
      `);

        printWindow.document.close();
        printWindow.focus();

        setTimeout(() => {
          printWindow.print();
          printWindow.close();
        }, 500);
      }
    </script>
  </body>
</html>
