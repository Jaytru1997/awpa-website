<!DOCTYPE html>
<html lang="en" class="">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- favicon -->
    <link rel="icon" href="/asset/logo/logo.png" type="image/png">
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">
    <title>
        <%= app_name %>
    </title>

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= app_name %>">
    <meta property="og:description" content="<%= description %>">
    <meta property="og:image" content="https://awpa-website.onrender.com/asset/images/banner.png">
    <meta property="og:image:alt" content="Angel Wings Power Assembly Logo">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://<%= url %>">
    <meta property="og:site_name" content="<%= app_name %>">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= app_name %>">
    <meta name="twitter:description" content="<%= description %>">
    <meta name="twitter:image" content="/asset/images/banner.png">
    <meta name="twitter:image:alt" content="Angel Wings Power Assembly Logo">

    <!-- Font Awesome (if used, ensure it's installed) -->
    <link rel="stylesheet" href="/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Puritan:ital,wght@0,400;0,700;1,400;1,700&family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/tailwind.css">

</head>

<body class="font-roboto bg-white dark:bg-black text-dark dark:text-white">

    <!-- Navigation Bar Start-->
    <nav class="bg-dark-blue-900">
        <div class="mx-auto max-w-7xl px-2">
            <div class="relative flex h-20 items-center justify-between">
                <!-- Logo -->
                <div class="flex shrink-0 items-center">
                    <img class="h-8 sm:h-14 w-auto " src="/asset/logo/logo.png" alt="<%= app_name %>">
                </div>

                <!-- Menu -->
                <div class="flex items-center justify-center lg:items-stretch lg:justify-start">
                    <div class="hidden lg:ml-6 lg:block">
                        <div class="flex space-x-4 uppercase">
                            <a href="/"
                                class="rounded-md px-3 py-2 text-sm font-medium hover:bg-dark-blue-800 text-grey-400 hover:text-white">Home</a>
                            <a href="/who-we-are"
                                class="rounded-md px-3 py-2 text-sm font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Who
                                we are</a>
                            <a href="/programs-and-events"
                                class="rounded-md px-3 py-2 text-sm font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Programs
                                & Events</a>
                            <a href="/visit-us"
                                class="rounded-md px-3 py-2 text-sm font-medium hover:bg-dark-blue-800 text-white"
                                aria-current="page">Visit
                                Us</a>
                            <a href="/church-media"
                                class="rounded-md px-3 py-2 text-sm font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Media</a>
                            <a href="/resources"
                                class="rounded-md px-3 py-2 text-sm font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Resources</a>
                            <a href="/giving"
                                class="rounded-md px-3 py-2 text-sm font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Giving</a>
                        </div>
                    </div>
                </div>

                <!-- Live Service Button -->
                <a href="https://live.angelwingspowerassembly.org"
                    class="hidden lg:inline-flex items-center justify-center rounded-md border border-transparent bg-light-blue-600 px-4 py-2 text-base font-medium text-dark shadow-sm hover:bg-light-blue-900 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 uppercase">
                    Live Service
                </a>

                <!-- Mobile menu button -->
                <div class="absolute inset-y-0 right-0 flex items-center lg:hidden no-animate">
                    <button type="button"
                        class="relative inline-flex items-center justify-center rounded-md p-2 text-grey-400 hover:bg-dark-blue-800 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-inset"
                        aria-controls="mobile-menu" aria-expanded="false" id="mobile-menu-toggle">
                        <span class="sr-only">Open main menu</span>
                        <!-- Hamburger icon (shown when menu is closed) -->
                        <svg class="block size-6 menu-open" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                        <!-- Close icon (shown when menu is open) -->
                        <svg class="hidden size-6 menu-close" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="hidden lg:hidden no-animate" id="mobile-menu">
            <div class="space-y-1 px-2 pt-2 pb-3 uppercase">
                <a href="/"
                    class="block rounded-md bg-dark-blue-900 px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">
                    Home
                </a>
                <a href="/who-we-are"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Who
                    we are</a>
                <a href="/programs-and-events"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Programs
                    & Events</a>
                <a href="/visit-us"
                    class="block rounded-md px-3 py-2 text-base font-medium hover:bg-dark-blue-800 text-white"
                    aria-current="page">Visit
                    Us</a>
                <a href="/church-media"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Media</a>
                <a href="/resources"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Resources</a>
                <a href="/giving"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Giving</a>
                <a href="https://live.angelwingspowerassembly.org"
                    class="block rounded-md px-3 py-2 text-base font-medium text-grey-400 hover:bg-dark-blue-800 hover:text-white">Live
                    Service</a>
            </div>
        </div>
    </nav>
    <!-- Navigation Bar End -->

    <!-- Header Start -->
    <section class="relative w-full h-[90vh] sm:h-[483px] overflow-hidden bg-white">
        <!-- Slides -->
        <div class="slideshow-container flex h-full transition-transform duration-500 ease-in-out">
            <!-- Slide 3 -->
            <div class="slide flex-none w-full h-full relative">
                <!-- Desktop -->
                <img src="/asset/images/general-header.png" alt="Header Image"
                    class="w-full h-full object-cover object-[100%_25%] hidden xl:block">
                <!-- Tablet -->
                <img src="/asset/images/general-header.png" alt="Header Image"
                    class="w-full h-full object-cover object-[75%_75%] hidden sm:block xl:hidden">
                <!-- Mobile -->
                <img src="/asset/images/general-header.png" alt="Header Image"
                    class="w-full h-full object-cover object-[75%_75%] sm:hidden">
                <div class="absolute inset-0 bg-dark-blue-900/50 flex items-center justify-center sm:justify-start">
                    <div
                        class="sm:ml-18 md:w-[50%] xl:w-[40%] text-center sm:text-left prose prose-lg text-blue-600 font-roboto xl:pl-56">
                        <p class="text-md md:text-lg uppercase">Visit Us</p>
                        <h1 class="text-4xl md:text-5xl lg:text-6xl mb-4 font-extrabold text-white uppercase">Get in
                            touch with our church</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Header End -->


    <!-- Visiting Hours Start -->
    <section class="mt-8 py-8 grid grid-cols-1 sm:grid-cols-2 gap-0 items-center justify-center">
        <div
            class="bg-[url('../asset/images/bg-visiting-hours.png')] bg-cover object-cover sm:h-[736px] px-8 py-8 flex flex-col items-center justify-center">
            <div
                class="bg-light dark:bg-dark-blue-900 p-6 border-b-[16px] border-light-blue-600  mx-8 flex flex-col items-start justify-center">
                <div class="container mx-auto max-w-7xl px-4 py-6 flex items-center justify-center flex-col gap-3">
                    <h2 class="uppercase text-2xl md:text-3xl lg:text-5xl text-dark font-bold mb-4">Visiting
                        Hours</h2>
                    </h2>
                </div>
                <div class="container mx-auto max-w-7xl px-4 py-6 flex items-center justify-center flex-col gap-3">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                        <!-- Day 1 -->
                        <div
                            class="bg-light-blue-200 dark:bg-dark-blue-900 p-6 border-b-[16px] border-blue-300 h-[300px] flex flex-col items-start justify-center gap-4 pl-12">
                            <p class="uppercase text-light-blue-900 font-bold text-xs">Monday - Saturday
                            </p>
                            <h2 class="text-lg lg:text-xl font-bold mb-4 uppercase">Office Hours</h2>
                            <p class="text-gray-700 dark:text-gray-300 text-sm">We are available at the administrative
                                office to answer your requests on weekdays.</p>
                            <p class="text-gray-700 font-normal flex gap-1 items-center justify-start text-sm"><img
                                    src="/asset/icons/clock-filled.svg" alt="date icon"> 8:00 AM - 6:00 PM</p>
                        </div>
                        <!-- Day 2 -->
                        <div
                            class="bg-light-blue-200 dark:bg-dark-blue-900 p-6 border-b-[16px] border-blue-300 h-[300px] flex flex-col items-start justify-center gap-4 pl-12">
                            <p class="uppercase text-light-blue-900 font-bold text-xs">Wednesday
                            </p>
                            <h2 class="text-lg lg:text-xl font-bold mb-4 uppercase">Prayers & Counselling</h2>
                            <p class="text-gray-700 dark:text-gray-300 text-sm">A one-on-one counseling and prayers
                                session.</p>
                            <p class="text-gray-700 font-normal flex gap-1 items-center justify-start text-sm"><img
                                    src="/asset/icons/clock-filled.svg" alt="date icon"> 9:00 AM - 3:00 PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <img src="/asset/images/campuses/hq.png" alt=""
            class="sm:h-[736px] w-full object-cover object-[100%_25%] cursor-pointer">

    </section>

    <!-- Visiting Hours End -->


    <!-- Contact Form Start -->
    <section class="mt-8 py-8">
        <div class="container mx-auto max-w-7xl px-4 flex items-start justify-center flex-col gap-3">
            <h2 class="uppercase text-2xl md:text-2xl lg:text-3xl text-dark font-bold mb-4">Contact Form:</h2>
        </div>
        <div
            class="container mx-auto max-w-7xl px-4 flex sm:flex-row items-start justify-start flex-col gap-10 sm:gap-36">
            <form action="/contact" method="post"
                class="w-full max-w-lg flex flex-col items-start justify-center gap-4">
                <input type="text" name="name" id="name" placeholder="Name"
                    class="bg-light-blue-200 rounded-md px-4 py-2 w-full" required>
                <input type="email" name="email" id="email" placeholder="Email"
                    class="bg-light-blue-200 rounded-md px-4 py-2 w-full" required>
                <textarea name="message" id="message" rows="4" placeholder="Message"
                    class="bg-light-blue-200 rounded-md px-4 py-2 mt-4 w-full" required></textarea>
                <button type="submit"
                    class="bg-blue-600 text-dark rounded-md px-4 py-2 mt-4 hover:bg-blue-700 w-full cursor-pointer">Send
                    Message</button>
            </form>
            <div class="flex items-start justify-start flex-col gap-3">
                <p class="text-gray-700 dark:text-gray-300 text-sm">Address</p>
                <p class="text-gray-700 dark:text-gray-300 text-lg font-bold uppercase w-[65%]">
                    17, Angel Wings Avenue, Off Kess College Road, Ekredjebor, Ughelli, Delta State.</p>
                <p class="text-gray-700 dark:text-gray-300 text-sm">Contact Details</p>
                <p class="text-gray-700 dark:text-gray-300 text-lg font-bold uppercase -mb-3">+234 (803) 647 6292</p>
                <p class="text-gray-700 dark:text-gray-300 text-lg font-bold uppercase -mb-3">+234 (803) 854 4919</p>
                <p class="text-gray-700 dark:text-gray-300 text-lg font-bold uppercase ">
                    contact@angelwingspowerassembly.org
                </p>
                <p class="text-gray-700 dark:text-gray-300 text-sm">Find us here</p>
                <a href="https://facebook.com"><img src="/asset/icons/fb.svg" alt=""></a>
            </div>
        </div>
    </section>

    <!-- Contact Form End -->


    <!-- Footer Start -->
    <footer class="bg-dark-blue-900 mt-8 mb-0 py-8">
        <div class="w-full mx-auto max-w-7xl px-2 grid grid-cols-12 gap-4">
            <div class="flex flex-col gap-4 col-span-12 lg:col-span-4">
                <!-- Logo -->
                <div class="flex items-start justify-start">
                    <img src="/asset/logo/logo.png" alt="" srcset="" class="w-20 h-16">
                </div>
                <!-- Address -->
                <div class="uppercase text-light flex flex-col gap-3 text-sm">
                    <p>+234 (803) 647 6292</p>
                    <p class="">17, Angel Wings Avenue, Off Kess College Road,
                        Ekredjebor, Ughelli, Delta State.</p>
                    <p>contact@angelwingspowerassembly.org</p>
                </div>

            </div>

            <div class="col-span-12 lg:col-span-2">
                <!-- Quick Links -->
                <div class="flex items-start justify-start mb-4">
                    <p class="text-left text-light">Quick Links</p>
                </div>
                <!-- Address -->
                <div class="text-light flex flex-col gap-1 uppercase text-sm">
                    <a href="/giving" class="py-2 text-base font-medium text-grey-400">Giving</a>
                    <a href="/visit-us" class="py-2 text-base font-medium text-grey-400">Visit
                        Us</a>
                    <a href="/who-we-are" class="py-2 text-base font-medium text-grey-400">About Us</a>
                    <a href="/programs-and-events" class="py-2 text-base font-medium text-grey-400">Events</a>
                    <a href="/resources" class="py-2 text-base font-medium text-grey-400">Resources</a>
                </div>
            </div>

            <div class="col-span-12 lg:col-span-2">
                <!-- Connect -->
                <div class="flex items-start justify-start mb-4">
                    <p class="text-left text-light">Connect</p>
                </div>
                <!-- Address -->
                <div class="text-light flex flex-row gap-3 uppercase text-sm">
                    <a href="https://facebook.com" class="py-2 text-base font-medium text-grey-400"><img
                            src="/asset/icons/facebook.svg" alt=""></a>
                    <a href="https://linkedin.com" class="py-2 text-base font-medium text-grey-400"><img
                            src="/asset/icons/linked-in.svg" alt=""></a>
                    <a href="https://www.youtube.com/channel/UCn_cW0cxpYvxeuAFs-CTt1Q"
                        class="text-base font-medium text-grey-400"><img src="/asset/icons/youtube.svg" alt=""
                            class="mt-[5px]"></a>
                </div>
            </div>

            <div class="col-span-12 lg:col-span-4 items-center justify-center">
                <!-- Newsletter -->
                <div class="flex items-start justify-start mb-4">
                    <p class="text-left text-light font-bold text-lg md:text-xl lg:text-2xl uppercase w-80">Subscribe to
                        get
                        Latest
                        Updates and News</p>
                </div>
                <div>
                    <form action="/subscribe" method="post">
                        <div class="flex flex-row gap-0 items-center justify-start">
                            <input type="email" name="email" id="email"
                                class="bg-transparent dark:bg-dark-blue-900 rounded-xl border-l-1 border-y-1 border-light text-dark px-4 py-3 placeholder:text-light -mr-10"
                                placeholder="Enter your email address" required>
                            <button type="submit"
                                class="bg-light-blue-600 text-dark border-1 border-l-0 border-light px-8 py-3 rounded-xl hover:bg-light-blue-900 uppercase">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </footer>

    <!-- Footer End -->





    <!-- JavaScript for mobile menu and dropdown -->
    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = mobileMenuButton.querySelector('.menu-open');
        const menuCloseIcon = mobileMenuButton.querySelector('.menu-close');

        mobileMenuButton.addEventListener('click', () => {
            const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
            mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
            mobileMenu.classList.toggle('hidden');
            menuOpenIcon.classList.toggle('hidden');
            menuCloseIcon.classList.toggle('hidden');
        });
    </script>
</body>

</html>